{
  "name": "sistema-reservas-peluqueria",
  "version": "1.0.0",
  "description": "Sistema completo de gestión de reservas para peluquería",
  "private": true,
  "workspaces": [
    "backend",
    "project"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd project && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd project && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../project && npm install",
    "db:generate": "cd backend && npm run db:generate",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:studio": "cd backend && npm run db:studio",
    "init:prod": "cd backend && npm run init:prod",
    "keep-alive": "node keep-alive.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "reservas",
    "peluqueria",
    "react",
    "nodejs",
    "postgresql",
    "railway",
    "netlify"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/sistema-reservas-peluqueria.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
