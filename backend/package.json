{
  "name": "peluqueria-backend",
  "version": "1.0.0",
  "description": "Backend para sistema de reservas de peluquer√≠a",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "serve": "node src/server.js",
    "build": "npm run db:generate && npm run db:migrate",
    "postinstall": "npm run db:generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "sync:check": "node scripts/sync-checker.js",
    "sync:verify": "curl -X POST http://localhost:3001/api/sync/auto-verify",
    "sync:repair": "node scripts/repair-existing-bookings.js",
    "sync:clean": "node scripts/clean-orphaned-events.js",
    "sync:daemon": "node sync-daemon.js",
    "sync:daemon-15min": "node sync-daemon-15min.js",
    "clean:duplicates": "node scripts/clean-duplicate-bookings.js",
    "init:prod": "node scripts/initialize-production.js",
    "migrate:to-postgres": "node scripts/migrate-to-postgres.js"
  },
  "keywords": [
    "reservas",
    "peluqueria",
    "api",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^156.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7",
    "sqlite": "^5.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "prisma": "^5.22.0"
  }
}
