generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Admin {
  id              Int                @id @default(autoincrement())
  username        String             @unique
  email           String             @unique
  passwordHash    String             @map("password_hash")
  firstName       String             @map("first_name")
  lastName        String             @map("last_name")
  isActive        Boolean            @default(true) @map("is_active")
  role            String             @default("admin")
  lastLogin       DateTime?          @map("last_login")
  createdAt       DateTime           @default(now()) @map("created_at")
  updatedAt       DateTime           @updatedAt @map("updated_at")
  activityLogs    AdminActivityLog[]
  bookings        Booking[]
  googleCalendars GoogleCalendar[]
  salonConfigs    SalonConfig[]
  workingHours    WorkingHours[]

  @@map("admins")
}

model Booking {
  id             Int      @id @default(autoincrement())
  date           String
  time           String
  status         String   @default("CONFIRMED")
  service        String?
  notes          String?
  source         String   @default("booking_form") // "booking_form", "admin_panel"
  sourceDetails  String?  @map("source_details") // Información adicional del origen
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  clientId       Int      @map("client_id")
  createdById    Int?     @map("created_by_id")
  googleEventIds String?  @map("google_event_ids")
  whatsappStatus String?  @map("whatsapp_status")
  client         Client   @relation(fields: [clientId], references: [id])
  createdBy      Admin?   @relation(fields: [createdById], references: [id])

  @@unique([date, time])
  @@map("bookings")
}

model Client {
  id             Int       @id @default(autoincrement())
  name           String
  phone          String    @unique
  isRegular      Boolean   @default(false) @map("is_regular")
  totalBookings  Int       @default(0) @map("total_bookings")
  firstVisitDate String?   @map("first_visit_date")
  lastVisitDate  String?   @map("last_visit_date")
  source         String    @default("manual") // "manual", "booking_form", "bulk_import", "admin_panel"
  sourceDetails  String?   @map("source_details") // Información adicional del origen
  isVerified     Boolean   @default(false) @map("is_verified")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")
  deletedAt      DateTime? @map("deleted_at")
  isDeleted      Boolean   @default(false) @map("is_deleted")
  bookings       Booking[]

  @@map("clients")
}

model WorkingHours {
  id             Int      @id @default(autoincrement())
  dayOfWeek      Int      @unique @map("day_of_week")
  enabled        Boolean  @default(true)
  startTime      String   @map("start_time")
  endTime        String   @map("end_time")
  breakStartTime String?  @map("break_start_time")
  breakEndTime   String?  @map("break_end_time")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  updatedById    Int?     @map("updated_by_id")
  updatedBy      Admin?   @relation(fields: [updatedById], references: [id])

  @@map("working_hours")
}

model SalonConfig {
  id                 Int      @id @default(autoincrement())
  slotDuration       Int      @default(30) @map("slot_duration")
  advanceBookingDays Int      @default(30) @map("advance_booking_days")
  salonName          String   @default("Salón Invictus") @map("salon_name")
  timezone           String   @default("America/Argentina/Buenos_Aires")
  defaultServices    String   @default("[]")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")
  updatedById        Int?     @map("updated_by_id")
  updatedBy          Admin?   @relation(fields: [updatedById], references: [id])

  @@map("salon_config")
}

model AdminActivityLog {
  id          Int      @id @default(autoincrement())
  adminId     Int      @map("admin_id")
  action      String
  entityType  String   @map("entity_type")
  entityId    Int?     @map("entity_id")
  description String
  oldValues   String?  @map("old_values")
  newValues   String?  @map("new_values")
  ipAddress   String?  @map("ip_address")
  userAgent   String?  @map("user_agent")
  createdAt   DateTime @default(now()) @map("created_at")
  admin       Admin    @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@map("admin_activity_logs")
}

model GoogleCalendar {
  id          Int      @id @default(autoincrement())
  name        String
  calendarId  String   @unique @map("calendar_id")
  email       String
  isActive    Boolean  @default(true) @map("is_active")
  isPrimary   Boolean  @default(false) @map("is_primary")
  colorId     String?  @map("color_id")
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  updatedById Int?     @map("updated_by_id")
  updatedBy   Admin?   @relation(fields: [updatedById], references: [id])

  @@map("google_calendars")
}
